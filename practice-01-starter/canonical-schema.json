{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Canonical Order",
  "type": "object",
  "required": ["orderId", "orderType", "source", "receivedAt", "customer", "items", "currency", "status"],
  "properties": {
    "orderId": { "type": "string" },
    "orderType": { "type": "string", "enum": ["standard", "express", "b2b"] },
    "source": { "type": "string", "enum": ["web", "mobile", "b2b"] },
    "receivedAt": { "type": "string", "format": "date-time" },
    "customer": {
      "type": "object",
      "required": ["name", "email", "address"],
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "address": {
          "type": "object",
          "required": ["street", "city", "postalCode", "country"],
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "postalCode": { "type": "string" },
            "country": { "type": "string" }
          }
        }
      }
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["productId", "productName", "quantity", "unitPrice", "currency", "taxRate"],
        "properties": {
          "productId": { "type": "string" },
          "productName": { "type": "string" },
          "quantity": { "type": "integer", "minimum": 1 },
          "unitPrice": { "type": "number" },
          "currency": { "type": "string" },
          "taxRate": { "type": "number" }
        }
      }
    },
    "currency": { "type": "string" },
    "status": { "type": "string", "enum": ["new", "processing", "shipped", "delivered"] },
    "orderDate": { "type": "string", "format": "date-time" }
  }
}
